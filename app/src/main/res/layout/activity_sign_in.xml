<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".SignInActivity">

    <include
        android:id="@+id/progress_login"
        layout="@layout/progress_view" />

    <TextView
        android:id="@+id/tv_signup_signup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_login_login"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="149dp"
        android:layout_marginTop="106dp"
        android:layout_marginEnd="147dp"
        android:background="#EF6191"
        android:text="Sign Up"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <ImageView
        android:id="@+id/iv_profile_pic_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@mipmap/ic_launcher_round" />

<EditText
    android:id="@+id/et_email_login"
    style="@style/et_style"
    android:layout_below="@+id/iv_profile_pic_login"
    android:layout_marginTop="50dp"
    android:hint="Email" />

    <EditText
        android:id="@+id/et_pass_login"
        style="@style/et_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_email_login"
        android:hint="Password"
        android:inputType="textPassword" />


<TextView
    android:id="@+id/tv_forgot_pass_login"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/et_pass_login"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:text="Forgot Password?"
    android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_login_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_forgot_pass_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Login"
        android:textAppearance="?android:textAppearanceLarge" />

</RelativeLayout>